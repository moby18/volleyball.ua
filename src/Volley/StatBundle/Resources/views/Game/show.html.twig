{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Game</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ entity.number }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ entity.duration }}</td>
            </tr>
            <tr>
                <th>Hometeamempty</th>
                <td>{{ entity.homeTeamEmpty }}</td>
            </tr>
            <tr>
                <th>Awayteamempty</th>
                <td>{{ entity.awayTeamEmpty }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ entity.score }}</td>
            </tr>
            <tr>
                <th>Scoresethome</th>
                <td>{{ entity.scoreSetHome }}</td>
            </tr>
            <tr>
                <th>Scoresetaway</th>
                <td>{{ entity.scoreSetAway }}</td>
            </tr>
            <tr>
                <th>Played</th>
                <td>{{ entity.played }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('stat_game') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('stat_game_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
