<div class="row game-center">
    <div class="col-lg-12">
        <div class="section-title">
            Матч-центр
        </div>
        {% for date in dates %}
        <h2>
            {% if date.date.date is not null %} {{ date.date.date|date("d.m.Y") }} {% endif %}
        </h2>
        <div class="game-center-data">
            <table class="table table-hover table-condensed">
                {% for tour in date.tours %}
                    <tr>
                        <th colspan="100">
                            <a href="{{ path('stat_tournament_page', {'season_id': tour.tour.round.season.id, 'tournament_id': tour.tour.round.season.tournament.id}) ~ '#' ~ tour.tour.ordering }}">
                                {{ tour.tour.round.season.tournament.country.name }}
                                - {{ tour.tour.round.season.tournament.name }}
                                - {{ tour.tour.round.season.tournament.sex|trans }}
                                {# - {{ tour.tour.round.season.name }} #}
                                {#- {{ tour.tour.round.name }}#}
                                - {{ tour.tour.name }}
                            </a>
                        </th>
                    </tr>
                    {% for game in tour.games %}
                        {% set winnerTeamA = (game.scoreSetHome > game.scoreSetAway) %}
                        {% set winnerTeamB = (game.scoreSetHome < game.scoreSetAway) %}
                        <tr>
                            <td>{% if game.date is not null %} {{ game.date|date("H:i") }} {% endif %}</td>
                            <td class="teamA text-right">
                                {{ winnerTeamA ? "<strong>" : "" }}
                                {#<a href="{{ path('stat_team_front',{'team_slug':game.homeTeam.slug}) }}">#}
                                {{ game.homeTeam.shortName }}
                                {#</a>#}
                                {{ winnerTeamA ? "</strong>" : "" }}
                            </td>
                            <td class="text-center"><span class="text-nowrap">{{ (game.scoreSetHome is not empty?game.scoreSetHome:'-') ~ ':' ~ (game.scoreSetAway is not empty?game.scoreSetAway:'-') }}</span></td>
                            <td class="teamB text-left">
                                {{ winnerTeamB ? "<strong>" : "" }}
                                {#<a href="{{ path('stat_team_front',{'team_slug':game.awayTeam.slug}) }}">#}
                                {{ game.awayTeam.shortName }}
                                {#</a>#}
                                {{ winnerTeamB ? "</strong>" : "" }}
                            </td>
                            <td class="text-right">
                                {% if date(game.date) >= date('','Europe/Kiev') and date(game.date) <= date('+2hours','Europe/Kiev') and not game.played %}
                                     <span class="game-live">{{ date(game.date)|date("H:i") }}</span>
                                    {#<div>#}
                                        {#<span>{{ date(game.date) }}</span>#}
                                        {#<span>{{ date('','Europe/Kiev') }}</span>#}
                                        {#<span>{{ date('+2hours','Europe/Kiev') }}</span>#}
                                    {#</div>#}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                {% endfor %}
            </table>
        </div>
        {% endfor %}
    </div>
</div>