{% extends '::layout.html.twig' %}

{% block content -%}

    <section>
        <div class="container">
            <div class="row">

                <ul class="pull-right">
                    <li>
                        <a href="{{ path('stat_schoolperson_front_new') }}">
                            Додати нового тренера
                        </a>
                    </li>
                </ul>

                <h1 class="page-header">Список доданих
                    тренерів</h1>



                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Ім'я</th>
                            <th>Адреса</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.id }}</a></td>
                                <td>{{ entity }}</td>
                                <td>{{ entity.schoolAddress }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="100">
                                <div class="navigation">
                                    {{ knp_pagination_render(entities) }}
                                </div>
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
