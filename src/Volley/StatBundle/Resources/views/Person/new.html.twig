{% extends '::admin.html.twig' %}

{% block body -%}
    <h1 class="page-header">Player creation</h1>


    {#{{ form(form) }}#}
    {{ form_start(form) }}
    {{ form_row(form.slug, { 'attr': {'disabled': 'disabled'}}) }}
    {{ form_errors(form) }}

    {% if entity.path %}<a href="{{ entity.getWebPath }}" target="_blank"><img style="width: 100px; height: auto;" src="{{ entity.getWebPath }}"></a>{% endif %}
    {{ form_row(form.file) }}

    {{ form_end(form) }}


    <div class="btn-group" role="group" aria-label="">
        <a href="{{ path('stat_person') }}" type="button"
           class="btn btn-default">Back to the list</a>
    </div>

{% endblock %}
