{% if persons|length %}
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title">
                День народження
            </div>
        </div>
    </div>
        <div class="row player-birthday">
            <div class="">
                <div class="col-lg-12">
                    <div id="birthdayCarousel" class="carousel slide" data-ride="carousel">
                        {#<!-- Indicators -->#}
                        {#<ol class="carousel-indicators">#}
                            {#<li data-target="#birthdayCarousel" data-slide-to="0" class="active"></li>#}
                            {#<li data-target="#birthdayCarousel" data-slide-to="1"></li>#}
                            {#<li data-target="#birthdayCarousel" data-slide-to="2"></li>#}
                            {#<li data-target="#birthdayCarousel" data-slide-to="3"></li>#}
                        {#</ol>#}

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            {% for person in persons %}
                                <div class="item {{ loop.first ? "active" : "" }}">
                                <figure class="img-caption">
                                    <img class="img-responsive"
                                         src="{{ person.getWebPath | imagine_filter('player_birthday') }}"
                                         alt="{{ person.firstName ~ ' ' ~ person.middleName ~ ' ' ~ person.lastName }}">
                                    <figcaption
                                            class="img-caption-text"><span class="firstName">{{ person.firstName }}</span> <span class="lastName">{{ person.lastName|upper }}</span></figcaption>
                                </figure>
                                </div>
                            {% endfor %}
                        </div>

                        {% if persons|length > 1 %}
                            <!-- Left and right controls -->
                            <a class="left carousel-control" href="#birthdayCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#birthdayCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon glyphicon-menu-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
{% endif %}