{% extends '::base.html.twig' %}

{% block body -%}
    <h1>GameSet list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Scoresethome</th>
                <th>Scoresetaway</th>
                <th>Number</th>
                <th>Duration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('gameset_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.scoreSetHome }}</td>
                <td>{{ entity.scoreSetAway }}</td>
                <td>{{ entity.number }}</td>
                <td>{{ entity.duration }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('gameset_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('gameset_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('gameset_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
