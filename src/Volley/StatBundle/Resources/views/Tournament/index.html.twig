{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Tournament list</h1>
    <div class="pull-right">
        <a type="button"
           class="btn btn-success" href="{{ path('stat_tournament_new') }}">
            Create a new entry
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover .table-condensed">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('stat_tournament_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.country.name ~' - '~ entity.name ~ ' - ' ~ entity.sex|trans  }}</td>
                    <td>{{ entity.status }}</td>
                    <td class="col-md-2 col-lg-2 col-sm-2">
                        <div class="btn-group pull-right" role="group" aria-label="">
                            {#<a href="{{ path('stat_tournament_show', { 'id': entity.id }) }}" type="button"#}
                            {#class="btn btn-default">show</a>#}
                            <a href="{{ path('stat_tournament_edit', { 'id': entity.id }) }}" type="button"
                               class="btn btn-default">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
