<div class="row tournament-short">
    <div class="col-lg-12">
        <h2><a href="{{ path('stat_tournament_page', {'season_id': season.id, 'tournament_id': tournament.id}) }}">{{ tournament.name }} - {{ season.name }}</a></h2>
        <table class="table table-hover table-condensed">
            <thead class="text-center">
            <th title="Місце">#</th>
            <th title="Назава команди">Команда</th>
            {#<th>Матчі</th>#}
            <th title="Перемоги/Поразки">П/П</th>
            <th title="Очки">Очки</th>
            </thead>
            {% for row in table %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td><a href="{{ path('stat_team_front',{'id': row['team'].id}) }}">{{ row['team'].name }}</a></td>
                    {#<td>{{ row.games }}</td>#}
                    <td class="text-center">{{ row.win ~ '/' ~ row.loss }}</td>
                    <td class="text-center">{{ row.points|number_format(0) }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>