{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Tour list</h1>

    <div class="pull-right">
        <a type="button"
           class="btn btn-success"
           href="{{ path('stat_tour_new') }}">
            Create a new entry
        </a>
    </div>
    <div class="clearfix"></div>

    <form class="form-inline filter"
          action="{{ path('stat_tour_filter') ~ '?page=1' }}"
          method="POST">
        <div class="form-group">
            <div class="form-inline form-horizontal">
                <div class="form-group">{{ form_widget(filter.country) }}</div>
                <div class="form-group">{{ form_widget(filter.tournament) }}</div>
                <div class="form-group">{{ form_widget(filter.season) }}</div>
                <div class="form-group">{{ form_widget(filter.round) }}</div>
                <div class="form-group">{{ form_widget(filter.tour_filter) }}</div>
                <div class="form-group">{{ form_widget(filter.clear) }}</div>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover .table-condensed">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Round</th>
                <th>Ordering</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>
                        <a href="{{ path('stat_tour_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                    </td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.round }}</td>
                    <td>{{ entity.ordering }}</td>
                    <td class="col-md-2 col-lg-2 col-sm-2">
                        <div class="btn-group pull-right"
                             role="group" aria-label="">
                            {#<a href="{{ path('stat_tour_show', { 'id': entity.id }) }}" type="button"#}
                            {#class="btn btn-default">show</a>#}
                            <a href="{{ path('stat_tour_edit', { 'id': entity.id }) }}"
                               type="button"
                               class="btn btn-default">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="100">
                    <div class="navigation">
                        {{ knp_pagination_render(entities) }}
                    </div>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
