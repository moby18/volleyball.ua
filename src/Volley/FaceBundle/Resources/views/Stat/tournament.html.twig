{% extends '::layout.html.twig' %}

{#{% set page_image = app.request.getSchemeAndHttpHost() ~ tournament.getWebPath %}#}
{% set title = tournament.title ~ ' - ' ~ season.name %}
{% set h1 = tournament.h1 %}
{% set meta_keywords = tournament.keywords %}
{% set meta_description = tournament.description %}

{% block content %}

    <div class="section">
        <div class="container tournament">
            <div class="row">
                {#<h1>{{ tournament.country.name }} - {{ tournament.name }} - {{ tournament.sex|trans }} - {{ season.name }}</h1>#}
                <h1>{{ h1 }} - {{ season.name }}</h1>
            </div>
            {% for round in rounds %}
                {% if season.tournamentTable %}
                <div class="row">
                    <table class="table table-striped table-hover table-condensed">
                        <thead>
                        <th class="text-center">Місце</th>
                        <th>Команда</th>
                        <th class="text-center">Матчі</th>
                        <th class="text-center">Перемоги</th>
                        <th class="text-center">Поразки</th>
                        <th><span class="text-nowrap">3-0</span></th>
                        <th><span class="text-nowrap">3-1</span></th>
                        <th><span class="text-nowrap">3-2</span></th>
                        <th><span class="text-nowrap">2-3</span></th>
                        <th><span class="text-nowrap">1-3</span></th>
                        <th><span class="text-nowrap">0-3</span></th>
                        <th class="text-center">Партії</th>
                        <th class="text-center">М'ячі</th>
                        <th class="text-center">Очки</th>
                        </thead>
                        {% for row in round.table %}
                            <tr>
                                <td class="text-center">{{ loop.index }}</td>
                                {#<td><a href="{{ path('volley_face_stat_team',{'team_id':row['team'].id}) }}">{{ row['team'].name }}</a></td>#}
                                <td><span class="text-nowrap">{{ '"' ~ row['team'].name ~ '" ' ~ row['team'].city}}</span></td>
                                <td class="text-center">{{ row.games }}</td>
                                <td class="text-center">{{ row.win }}</td>
                                <td class="text-center">{{ row.loss }}</td>
                                <td class="text-center">{{ row.score30 }}</td>
                                <td class="text-center">{{ row.score31 }}</td>
                                <td class="text-center">{{ row.score32 }}</td>
                                <td class="text-center">{{ row.score23 }}</td>
                                <td class="text-center">{{ row.score13 }}</td>
                                <td class="text-center">{{ row.score03 }}</td>
                                <td class="text-center">{{ row.win_sets }}/{{ row.loss_sets }}</td>
                                <td class="text-center">{{ row.win_points }}/{{ row.loss_points }}</td>
                                <td class="text-center">{{ row.points }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                {% endif %}
                <div class="row">
                    {% for tour in round.round.tours %}
                        <div class="anchor" id="{{ tour.ordering }}"></div>
                        <table class="table table-striped table-hover table-condensed">
                            <thead>
                            <tr class="tour-head">
                                <td colspan="11" class="text-center"><strong>{{ tour.name }}</strong></td>
                            </tr>
                            {#{% if loop.first %}#}
                            <tr>
                                <th>#</th>
                                <th>Дата</th>
                                <th>Час</th>
                                <th>Команда А</th>
                                <th>Команда Б</th>
                                <th>Результат</th>
                                <th>1 сет</th>
                                <th>2 сет</th>
                                <th>3 сет</th>
                                <th>4 сет</th>
                                <th>5 сет</th>
                            </tr>
                            {#{% endif %}#}

                            </thead>
                            <tfoot></tfoot>
                            <tbody>
                            {% for game in tour.games %}
                                {% set winnerTeamA = (game.scoreSetHome > game.scoreSetAway) %}
                                {% set winnerTeamB = (game.scoreSetHome < game.scoreSetAway) %}
                                <tr>
                                    <td>{{ game.number }}</td>
                                    <td>{% if game.date is not null %} {{ game.date|date("d/m/y") }} {% endif %}</td>
                                    <td>{% if game.date is not null %} {{ game.date|date("H:i") }} {% endif %}</td>
                                    <td>{{ winnerTeamA ? "<strong>" : "" }}
                                        {#<a href="{{ path('volley_face_stat_team',{'team_id':game.homeTeam.id}) }}"> {{ game.homeTeam.name }} </a>{{ winnerTeamA ? "</strong>" : "" }}#}
                                        {{ game.homeTeam.name }} {{ winnerTeamA ? "</strong>" : "" }}
                                    </td>
                                    <td>{{ winnerTeamB ? "<strong>" : "" }}
                                        {#<a href="{{ path('volley_face_stat_team',{'team_id':game.awayTeam.id}) }}"> {{ game.awayTeam.name }} </a>{{ winnerTeamB ? "</strong>" : "" }}#}
                                        {{ game.awayTeam.name }} {{ winnerTeamB ? "</strong>" : "" }}
                                    </td>
                                    <td>{{ game.scoreSetHome }} - {{ game.scoreSetAway }}</td>
                                    {% for set in game.sets %}
                                        <td>{{ set.scoreSetHome }} - {{ set.scoreSetAway }}</td>
                                    {% endfor %}
                                    {% set count = (5 - game.sets|length) %}
                                    {% if count != 0 %}
                                        {% for set in 1..count %}
                                            <td></td>
                                        {% endfor %}
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}