{% extends '::layout.html.twig' %}

{% set page_image = app.request.getSchemeAndHttpHost() ~ post.getWebPath %}
{% set title = post.title %}
{% set meta_keywords = post.metakey %}
{% set meta_description = post.metadescr %}

{% block content %}

    <div id="fb-root"></div>
    <script>(function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.net/ru_RU/sdk.js#xfbml=1&version=v2.5&appId=868321236586850";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <div class="section post">

        <div class="container">

            <div class="row">
                <div class="col col-lg-8 col-md-12 col-sm-12">
                    <a href="{{ path('volley_face_post',{'category_slug': post.category.slug, 'post_slug': post.slug}) }}">
                        <h1>{{ post.title }}</h1>
                    </a>
                    <img class="img-responsive" src="{{ post.getWebPath }}" alt="{{ post.title }}">

                    <span class="news-info">{{ post.created|date('d/m/Y H:i') ~ ' | ' ~ post.createdBy }}</span>
                    <p>
                        <b>{{ post.content|raw }}</b>
                    </p>
                    <p>
                        {% autoescape %}
                            {{ post.text|raw }}
                        {% endautoescape %}
                    </p>

                    <p id="google-adsende-banner" style="height: 100px; width: 100%;">
                        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                        <!-- AdsBlockForPost -->
                        <ins class="adsbygoogle"
                             style="display:block"
                             data-ad-client="ca-pub-9185300483138228"
                             data-ad-slot="2365888996"
                             data-ad-format="auto"></ins>
                        <script>
                            (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    </p>

                    {% include '@VolleyFace/Social/uptolike.html.twig' %}

                    <br/>
                </div>
                <div class="col-lg-1 col-md-0 col-sm-0"></div>
                <div class="col-lg-3 col-md-12 col-sm-12">
                    {% include 'VolleyFaceBundle:Default/includes:fb.html.twig' with {} %}
                    {% include 'VolleyFaceBundle:Default/includes:vk.html.twig' with {} %}
                    <p></p>
                    <a href="{{ path('volley_face_mikasa_vls300') }}" title="Mikasa VLS300 мяч для пляжного волейбола">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <p>
                                    <img alt="Mikasa VLS300 мяч для пляжного волейбола" class="img-responsive"
                                         src="{{ asset("uploads/products/mikasa-vls300/VLS300.png") }}">
                                </p>
                                <p class="text-center">Скоро лето! <b>volleyball.ua</b> начинает продажу мячей для
                                    пляжного волейбола
                                    <b>Mikasa VLS300</b>.
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>


        </div>
        <!-- /.container -->

    </div>
    <!-- /.section -->



{% endblock %}