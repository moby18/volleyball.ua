{% set color = item.category.color ? item.category.color : item.category.parent and item.category.parent.color ? item.category.parent.color : item.category.parent and item.category.parent.parent and item.category.parent.parent.color ? item.category.parent.parent.color : default_category_color %}
<div class="news-item col-lg-12 col-md-12 col-sm-12 col-xs-12 fade-in">
    <a href="{{ path('volley_face_post',{'category_slug': item.category.slug,'post_slug': item.slug}) }}">
        <img class="img-responsive" src="{{ item.getWebPath | imagine_filter('main_pic') }}"
             alt="{{ item.title ~ ' ' ~ item.metakey }}">
    </a>
    <div class="news-info">
        <span class="news-date">{{ item.created|localizeddate('none', 'none', null, null, "cccc, d MMMM") }} <br/>
            <a href="{{ path('volley_face_blog',{'category_slug': item.category.slug}) }}" style="color: {{ color }}">{{ item.category.name }}</a></span>
        {#<span class="news-author"> / {{ item.createdBy }}</span>#}
        <span class="clearfix"></span>
    </div>
    <a href="{{ path('volley_face_post',{'category_slug': item.category.slug, 'post_slug': item.slug}) }}">
        <h3 style="border-left-color: {{ color }}">{{ item.title }}</h3></a>
    {% autoescape %}
        {{ item.content|raw }}
    {% endautoescape %}
    {#{%  if not loop.last %}#}
    {#<hr class="underline"/>#}
    {#{% endif %}#}
</div>