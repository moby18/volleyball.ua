<div class="news-item col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <a href="{{ path('volley_face_post',{'category_slug': item.category.slug,'post_slug': item.slug}) }}">
        <img class="img-responsive" src="{{ item.getWebPath | imagine_filter('main_pic') }}">
    </a>
    <div class="news-info">
        <span class="news-date">{{ item.created|localizeddate('none', 'none', null, null, "cccc, d MMMM")}} / <a href="{{ path('category',{'category_slug': item.category.slug}) }}">{{ item.category.name }}</a></span>
        <span class="news-author"> / {{ item.createdBy }}</span>
        <span class="clearfix"></span>
    </div>
    <a href="{{ path('volley_face_post',{'category_slug': item.category.slug, 'post_slug': item.slug}) }}"><h3>{{ item.title }}</h3></a>
    {% autoescape %}
        {{ item.content|raw }}
    {% endautoescape %}
    {%  if not loop.last %}
    <hr class="underline"/>
    {#<hr class="underline-over"/>#}
    {% endif %}
</div>