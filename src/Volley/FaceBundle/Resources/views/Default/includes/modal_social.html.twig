<!-- Modal -->
<div class="modal fade" id="social" tabindex="-1" role="dialog" aria-labelledby="socialLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {#<h4 class="modal-title" id="socialLabel">Приєднуйтесь до нас у соціальних мережах</h4>#}
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col col-lg-12 col-md-12 col-sm-12 text-center">
                        <h2 class="modal-title">Приєднуйтесь до нас у соціальних мережах</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-lg-6 col-md-6 col-sm-12 text-center">{% include 'VolleyFaceBundle:Default/includes:fb.html.twig' with {} %}</div>
                    <div class="col col-lg-6 col-md-6 col-sm-12 text-center">{% include 'VolleyFaceBundle:Default/includes:vk.html.twig' with {} %}</div>
                </div>
                <div class="row">
                    <br/>
                </div>
                <div class="row">
                    <div class="col col-lg-6 col-md-6 col-sm-12 text-center">
                        <a href="https://twitter.com/volleyballua" class="twitter-follow-button" data-size="large" data-lang="uk" data-show-count="false">Follow @volleyballua</a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
                    </div>
                    <div class="col col-lg-6 col-md-6 col-sm-12 text-center">
                        <!-- Вставьте этот тег в заголовке страницы или непосредственно перед закрывающим тегом основной части. -->
                        <script src="https://apis.google.com/js/platform.js" async defer>
                            {lang: 'uk'}
                        </script>
                        <!-- Поместите этот тег туда, где должна отображаться виджет. -->
                        <div class="g-follow" data-annotation="bubble" data-height="24" data-href="https://plus.google.com/113293000827936870660" data-rel="publisher"></div>
                    </div>

                </div>
            </div>
            {#<div class="modal-footer">#}
            {#<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>#}
            {#<button type="button" class="btn btn-primary">Save changes</button>#}
            {#</div>#}
        </div>
    </div>
</div>