{% extends '::layout.html.twig' %}

{% set title = category.name %}
{% set meta_keywords = category.keywords %}
{% set meta_description = category.description %}

{% set color = category.color ? category.color : category.parent and category.parent.color ? category.parent.color : category.parent and category.parent.parent and category.parent.parent.color ? category.parent.parent.color : default_category_color %}

{% block content %}

    <div class="section">

        <div class="container">

            <h1 class="text-center category-title" style="color: {{ color }}">{{ category.name }}</h1>

            <div class="row">
                <div class="col-lg-6">
                    <div class="row">
                        {% for item in posts %}
                            {% include 'VolleyFaceBundle:Default/includes:post.html.twig' %}
                        {% endfor %}
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="pagination-container">
                    {{ knp_pagination_render(posts) }}
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.section -->

{% endblock %}