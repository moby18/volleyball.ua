{% if pageCount > 1 %}
    <ul class="pagination">
        {% if previous is defined %}
            <li class="arrow">
                <a href="{{ path(route, query) ~ pageParameterName ~ '/' ~ previous }}">
                    <span aria-hidden="true"><i class="fa fa-angle-left"></i></span>
                </a>
            </li>
        {% else %}
            <li class="arrow unavailable">
                <a>
                    <span aria-hidden="true"><i class="fa fa-angle-left"></i></span>
                </a>
            </li>
        {% endif %}

        {% if startPage > 1 %}
            <li>
                <a href="{{ path(route, query) ~ pageParameterName ~ '/' ~ 1 }}">1</a>
            </li>
            {% if startPage == 3 %}
                <li>
                    <a href="{{ path(route, query) ~ pageParameterName ~ '/' ~ 2 }}">2</a>
                </li>
            {% elseif startPage != 2 %}
                <li class="unavailable">
                    <a>&hellip;</a>
                </li>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li>
                    <a href="{{ path(route, query) ~ pageParameterName ~ '/' ~ page }}">
                        {{ page }}
                    </a>
                </li>
            {% else %}
                <li class="active">
                    <a>{{ page }}</a>
                </li>
            {% endif %}

        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    <li class="unavailable">
                        <a>&hellip;</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path(route, query) ~ pageParameterName ~ '/' ~ (pageCount -1) }}">
                            {{ pageCount -1 }}
                        </a>
                    </li>
                {% endif %}
            {% endif %}
            <li>
                <a href="{{ path(route, query) ~ pageParameterName ~ '/' ~ pageCount }}">{{ pageCount }}</a>
            </li>
        {% endif %}

        {% if next is defined %}
            <li class="arrow">
                <a href="{{ path(route, query) ~ pageParameterName ~ '/' ~ next }}">
                    <span aria-hidden="true"><i class="fa fa-angle-right"></i></span>
                </a>
            </li>
        {% else %}
            <li class="arrow unavailable">
                <a>
                    <span aria-hidden="true"><i class="fa fa-angle-right"></i></span>
                </a>
            </li>
        {% endif %}
    </ul>
{% endif %}
