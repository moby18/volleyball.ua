{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Post list</h1>
    <div class="pull-right">
        <a type="button"
           class="btn btn-success" href="{{ path('post_new') }}">
            Create a new entry
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover .table-condensed">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                {#<th>Slug</th>#}
                {#<th>Text</th>#}
                <th>State</th>
                {#<th>Created</th>#}
                <th>Published</th>
                {#<th>Content</th>#}
                <th>Createdby</th>
                {#<th>Modifiedby</th>#}
                {#<th>Ordering</th>#}
                {#<th>Metakey</th>#}
                {#<th>Metadescr</th>#}
                {#<th>Hits</th>#}
                {#<th>Metadata</th>#}
                <th>Featured</th>
                {#<th>Language</th>#}
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tfoot>
                <tr>
                    <td colspan="100">
                        <div class="navigation">
                            {{ knp_pagination_render(entities) }}
                        </div>
                    </td>
                </tr>
            </tfoot>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    {#<td>{{ entity.slug }}</td>#}
                    {#<td>{{ entity.text }}</td>#}
                    <td class="text-center">
                        <span class="glyphicon {{ entity.state ? 'glyphicon glyphicon-ok' : 'glyphicon glyphicon-remove' }}" aria-hidden="true"></span>
                    </td>
                    {#<td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                    <td>{% if entity.published %}{{ entity.published|date('Y-m-d H:i:s') }}{% endif %}</td>
                    {#<td>{{ entity.content }}</td>#}
                    <td>{{ entity.createdBy }}</td>
                    {#<td>{{ entity.modifiedBy }}</td>#}
                    {#<td>{{ entity.ordering }}</td>#}
                    {#<td>{{ entity.metakey }}</td>#}
                    {#<td>{{ entity.metadescr }}</td>#}
                    {#<td>{{ entity.hits }}</td>#}
                    {#<td>{{ entity.metadata }}</td>#}
                    <td class="text-center">
                        <span class="glyphicon {{ entity.featured ? 'glyphicon glyphicon-star' : 'glyphicon glyphicon-star-empty' }}" aria-hidden="true"></span>
                    </td>
                    {#<td>{{ entity.language }}</td>#}
                    <td class="col-md-2 col-lg-2 col-sm-2">
                        <div class="btn-group pull-right" role="group" aria-label="">
                            <a href="{{ path('post_preview', { 'id': entity.id }) }}" target="_blank" type="button"
                               class="btn btn-default">preview</a>
                            <a href="{{ path('post_show', { 'id': entity.id }) }}" type="button"
                               class="btn btn-default">show</a>
                            <a href="{{ path('post_edit', { 'id': entity.id }) }}" type="button"
                               class="btn btn-default">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
