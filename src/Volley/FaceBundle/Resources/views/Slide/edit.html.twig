{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Slide edit</h1>

    {{ form(edit_form) }}

    <div class="btn-group" role="group" aria-label="">
        <a href="{{ path('slide') }}" type="button"
           class="btn btn-default">Back to the list</a>
    </div>
    <div class="pull-right">
        {{ form(delete_form) }}
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/volleyface/js/jquery.datetimepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/custom/slide.js') }}"></script>
{% endblock %}

{% block styles %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/volleyface/css/jquery.datetimepicker.css') }}" type="text/css" />
{% endblock %}