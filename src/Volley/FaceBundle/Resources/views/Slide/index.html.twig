{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Slide list</h1>

    <div>
        <a type="button"
           class="btn btn-success" href="{{ path('slide_new') }}">
            Create a new entry
        </a>
    </div>
    <div class="clearfix"></div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Type</th>
                <th>Link</th>
                <th>Ordering</th>
                <th>Status</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('slide_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.type }}</td>
                    <td>{{ entity.link }}</td>
                    <td>{{ entity.ordering }}</td>
                    <td>{{ entity.status }}</td>
                    <td>{{ entity.image }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="">
                            <a href="{{ path('slide_show', { 'id': entity.id }) }}" type="button"
                               class="btn btn-default">show</a>
                            <a href="{{ path('slide_edit', { 'id': entity.id }) }}" type="button"
                               class="btn btn-default">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
