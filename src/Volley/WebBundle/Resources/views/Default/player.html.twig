                                {#Національність:#}
                            {#</div>#}
                        {#</div>#}
                        {#<div class="col col-lg-7 col-md-7 col-sm-7">#}
                            {#<div class="player_value">#}
                                {#{{ player.nationality }}#}
                            {#</div>#}
                        {#</div>#}
                    {#</div>#}
                    <div class="row player_data">
                        <div class="col col-lg-5 col-md-5 col-sm-5">
                            <div class="player_label">
                                Позиція:
                            </div>
                        </div>
                        <div class="col col-lg-7 col-md-7 col-sm-7">
                            <div class="player_value">
                                {{ player.position }}
                            </div>
                        </div>
                    </div>
                    <div class="row player_data">
                        <div class="col col-lg-5 col-md-5 col-sm-5">
                            <div class="player_label">
                                Спортивне звання:
                            </div>
                        </div>
                        <div class="col col-lg-7 col-md-7 col-sm-7">
                            <div class="player_value">
                                {{ player.grade }}
                            </div>
                        </div>
                    </div>
                    <div class="row player_data">
                        <div class="col col-lg-12 col-md-12 col-sm-12">
                            <div class="player_value">
                                {{ player.description }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}